<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-success">
		<a class="navbar-brand" href="/urls">TinyApp</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<% if (!user) { %>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav ">
			</div>
		</div>
		<% } else { %>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
			</div>
		</div>
		<% } %>
		<% if (!user) { %>
		<label class="text-light" for="Login now">You are not logged in! Log in now to add a URL ---></label>
		<form class="form-inline" action="/register" method="get">
			<div class="form-group mb-2 ml-2">
				<button type="submit" class="btn btn-outline-dark">Register</button>
			</div>
		</form>
		<form class="form-inline" action="/login" method="get">
			<div class="form-group mb-2 ml-2">
				<button type="submit" class="btn btn-outline-dark">Login</button>
			</div>
		</form>
		<% } else { %>
		<form class="form-inline" method='POST' action="/logout">
			<label>You are logged in as: <%= user.email %> </label>
			<button type="submit" class="btn btn-outline-dark ml-2">Logout</button>
		</form>
		<% } %>
	</nav>
</header>